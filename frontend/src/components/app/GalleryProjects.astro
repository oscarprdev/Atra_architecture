---
import type { Project } from '../../pages/api/generated';
import GalleryItem from './GalleryItem.astro';

interface Props {
	projects: Project[];
}

const { projects }: Props = Astro.props;
---

<section class="gallery-projects">
	<h1>Projectes</h1>
	<ul>
		{projects.map(pr => <GalleryItem project={pr} />)}
	</ul>
</section>

<style scoped>
	.gallery-projects {
		display: flex;
		align-items: center;
		flex-direction: column;

		margin-top: 5rem;

		height: 100%;
		width: 90vw;
		max-width: var(--max-width-gallery);
	}

	h1 {
		margin: 0;
		margin-top: -2rem;
		font-size: var(--font-big);
		text-transform: uppercase;
	}

	ul {
		margin-top: 3rem;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 0.5rem;
		padding: 0;
		justify-content: center;
		width: 100%;
		max-width: var(--max-width-gallery);
	}

	@media screen and (max-width: 450px) {
		h1 {
			font-size: 26px;
			margin-top: -3rem;
			margin-bottom: -1rem;
		}
	}

	@media screen and (max-width: 650px) {
		ul {
			gap: 1rem;
			place-content: center;
			padding: 0;
		}
	}

	@media screen and (max-width: 850px) {
		ul {
			place-content: center;
			padding: 0;
		}
	}
</style>
