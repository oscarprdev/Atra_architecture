---
import Nav from './Nav.astro';
---

<header>
	<a
		class="title"
		href="/"
		>ATRA</a
	>
	<Nav />
</header>

<style scoped>
	header {
		display: flex;
		align-items: center;
		justify-content: space-between;

		width: 100%;
		max-width: 100vw;

		border-bottom: 1px solid var(--contrast-color);
		color: var(--contrast-color);

		margin: 0 auto;
		padding: 0 2rem;
		height: 60px;
	}

	.title {
		font-size: var(--font-medium);
		font-weight: bold;
	}

	@media (width < 450px) {
		header {
			padding: 0 1rem;
		}
	}
</style>
