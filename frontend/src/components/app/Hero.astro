---
import { IMAGE_URL } from '../../constants';

interface Props {
	mainImage: string;
}

const { mainImage }: Props = Astro.props;
---

<section class="title-container">
	<div class="title">
		<h1>ATRA</h1>
		<h2>ARQUITECTURA</h2>
	</div>
	<div class="name-container">
		<h3>Jaume Pérez Llopis</h3>
	</div>
</section>
<figure>
	<picture>
		<img
			src={`${IMAGE_URL}/${mainImage}`}
			alt="Main project of a building designed by the architect Jaume Pérez Llopis"
			loading="eager"
		/>
	</picture>
</figure>

<style>
	.title-container {
		width: 100%;
		display: flex;
		align-items: center;
		flex-direction: column;
		padding: 2vw;
		margin-top: 5rem;
	}

	.title {
		overflow: hidden;
		display: flex;
		gap: 0.5rem;
	}

	h1 {
		font-size: 8.2rem;
		color: var(--contrast-color);
		margin: 0;
		font-weight: bold;
		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.8s ease-out forwards;
	}

	h2 {
		font-size: 8.2rem;
		color: var(--contrast-color);
		margin: 0;
		font-weight: 200;

		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.8s ease-out forwards 0.1s;
	}

	.name-container {
		align-self: end;
	}

	h3 {
		font-weight: 200;
		font-size: var(--font-small);
		margin: 0;
		margin-right: 1.8rem;

		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.5s ease-out forwards 0.5s;
	}

	figure {
		overflow: hidden;
		width: 100%;
		position: relative;
		height: 100vh;
	}

	figure::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: var(--background-color);
		animation: revealImage 1.2s ease-in-out forwards 0.3s;
	}

	picture {
		width: 100%;
	}

	figure img {
		display: block;

		width: 100%;
	}

	@keyframes fade-up {
		to {
			opacity: 1;
			transform: translateY(0%);
		}
	}

	@keyframes revealImage {
		from {
			width: 100%;
		}
		to {
			width: 0;
		}
	}
</style>
