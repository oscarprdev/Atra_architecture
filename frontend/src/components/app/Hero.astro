---
import { IMAGE_URL } from '../../constants';

interface Props {
	mainImage: string;
	year: number;
	description: string;
}

const { mainImage, year, description }: Props = Astro.props;
---

<section class="title-container">
	<div class="title">
		<h1>ATRA</h1>
		<h2>ARQUITECTURA</h2>
	</div>
	<div class="name-container">
		<h3>Jaume PÃ©rez Llopis</h3>
	</div>
</section>
<figure style={`background-image: url(${IMAGE_URL}/${mainImage})`}>
	<div class="project">
		<p>{year}</p>
		<p>{description}</p>
	</div>
</figure>

<script>
	document.addEventListener('DOMContentLoaded', event => {
		const $figure = document.querySelector('figure');

		window.addEventListener('scroll', () => {
			const offset = window.scrollY;
			if ($figure) {
				$figure.style.backgroundPositionY = offset * -0.5 + 'px';
			}
		});
	});
</script>

<style scoped>
	.title-container {
		width: 100%;
		display: flex;
		align-items: center;
		flex-direction: column;
		padding: 2vw;
		margin-top: 5rem;
	}

	.title {
		overflow: hidden;
		display: flex;
		gap: 0.5rem;
	}

	h1 {
		font-size: 8.2rem;
		color: var(--contrast-color);
		margin: 0;
		font-weight: bold;
		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.8s ease-out forwards;
	}

	h2 {
		font-size: 8.2rem;
		color: var(--contrast-color);
		margin: 0;
		font-weight: 200;

		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.8s ease-out forwards 0.1s;
	}

	.name-container {
		align-self: end;
	}

	h3 {
		font-weight: 200;
		font-size: var(--font-small);
		margin: 0;
		margin-right: 1.8rem;

		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.5s ease-out forwards 0.5s;
	}

	figure {
		overflow: hidden;
		width: 100%;
		position: relative;
		height: 70vh;

		background-attachment: fixed;
		background-repeat: no-repeat;
		background-size: cover;
		box-shadow: inset 0px -100px 80px rgba(0, 0, 0, 0.7);
	}

	figure::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: var(--background-color);
		animation: revealImage 1.2s ease-in-out forwards 0.3s;
	}

	.project {
		position: absolute;
		bottom: 1rem;
		right: 1rem;

		display: flex;
		flex-direction: column;
		align-items: start;
		color: var(--background-color);
	}

	.project p {
		margin: 0.1rem;
		font-size: var(--font-small);
	}

	@keyframes fade-up {
		to {
			opacity: 1;
			transform: translateY(0%);
		}
	}
</style>
