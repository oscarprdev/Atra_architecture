---
import { IMAGE_URL } from '../../constants';

interface Props {
	mainImage: string;
	year: number;
	description: string;
}

const { mainImage, year, description }: Props = Astro.props;
---

<section class="title-container">
	<div class="title">
		<h1>ATRA</h1>
		<h2>ARQUITECTURA</h2>
	</div>
	<div class="name-container">
		<h3>Jaume PÃ©rez Llopis</h3>
	</div>
</section>
<figure
	class="hero-image"
	style={`background-image: url(${IMAGE_URL}/${mainImage})`}
>
	<div class="project">
		<p>{year}</p>
		<p>{description}</p>
	</div>
</figure>

<script>
	document.addEventListener('DOMContentLoaded', event => {
		const $figure = document.querySelector('figure');

		window.addEventListener('scroll', () => {
			const offset = window.scrollY;
			if ($figure) {
				$figure.style.backgroundPositionY = offset * -0.5 + 'px';
			}
		});
	});
</script>

<style scoped>
	.title-container {
		width: 100%;
		display: flex;
		align-items: center;
		flex-direction: column;
		padding: 2vw;
		margin-top: 3rem;
	}

	.title {
		overflow: hidden;
		display: flex;
		gap: 0.5rem;
		font-family: 'Inter';
	}

	h1 {
		font-family: 'Inter' !important;
		font-size: 8.2rem;
		color: var(--contrast-color);
		margin: 0;
		font-weight: 600;
		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.8s ease-out forwards;
	}

	h2 {
		font-family: 'Inter' !important;
		font-size: 8.2rem;
		color: var(--contrast-color);
		margin: 0;
		font-weight: 300;

		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.8s ease-out forwards 0.1s;
	}

	.name-container {
		align-self: end;
	}

	h3 {
		font-weight: 300;
		font-size: var(--font-small);
		margin: 0;
		margin-right: 1.8rem;

		opacity: 0;
		transform: translateY(110%);
		animation: fade-up 0.5s ease-out forwards 0.5s;
	}

	.hero-image {
		overflow: hidden;
		width: 100%;
		position: relative;
		height: 70vh;

		background-attachment: fixed;
		background-repeat: no-repeat;
		background-size: cover;
		box-shadow: inset 0px -100px 80px rgba(0, 0, 0, 0.7);
	}

	.hero-image::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: var(--background-color);
		animation: revealImage 1.2s ease-in-out forwards 0.3s;
	}

	.project {
		position: absolute;
		bottom: 1rem;
		right: 1rem;

		display: flex;
		flex-direction: column;
		align-items: end;
		color: var(--background-color);
	}

	.project p {
		margin: 0.1rem;
		font-size: var(--font-small);
	}

	@keyframes fade-up {
		to {
			opacity: 1;
			transform: translateY(0%);
		}
	}

	.title,
	h1,
	h2 {
		text-align: center;
		font-size: 2rem;
	}

	@media screen and (max-width: 450px) {
		.title-container {
			padding-top: 3rem;
		}

		.hero-image {
			background-size: 800px auto;
			background-position: center;
			height: 50vh;
			padding-top: 5rem;
			margin-top: 4rem;
		}
	}

	@media screen and (min-width: 530px) {
		h1,
		h2 {
			font-size: 2.5rem;
		}
	}

	@media screen and (min-width: 700px) {
		h1,
		h2 {
			font-size: 4rem;
		}
	}

	@media screen and (min-width: 900px) {
		h1,
		h2 {
			font-size: 5rem;
		}
	}

	@media screen and (min-width: 1100px) {
		h1,
		h2 {
			font-size: 6.5rem;
		}
	}

	@media screen and (min-width: 1300px) {
		h1,
		h2 {
			font-size: 8.5rem;
		}
	}

	@media screen and (min-width: 1500px) {
		h1,
		h2 {
			font-size: 10.5rem;
		}
	}
</style>
