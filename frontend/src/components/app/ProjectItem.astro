---
import { IMAGE_URL } from '../../constants';
import TextWithIcon from './TextWithIcon.astro';
import Link from './Link.astro';
import type { Project } from '../../pages/api/generated';

interface Props {
	project: Project;
}

const { project }: Props = Astro.props;
---

<li class="show">
	<Link href={`/project/${project.id}`}>
		<picture>
			<img
				data-testid="project-image"
				src={`${IMAGE_URL}/${project.mainImage}`}
				alt={project.title}
			/>
		</picture>
		<TextWithIcon text={project.title} />
	</Link>
</li>

<style scoped>
	li {
		display: flex;
		flex-direction: column;
		justify-content: start;
		align-items: center;
		gap: 0.5rem;
		height: fit-content;
	}

	picture {
		width: 100%;
		height: 350px;
		overflow: hidden;
		box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
	}

	img {
		transition: transform 0.6s ease;
	}

	picture:hover img {
		transform: scale(1.1);
	}

	li:hover :global(.text-container p::after) {
		transform: scaleX(1);
	}

	li:hover :global(.icon),
	li:hover :global(.icon-2) {
		transform: translateY(-28%) translateX(24%);
	}

	@media screen and (max-width: 400px) {
		picture {
			border-radius: 8px;
		}

		li:hover img {
			transform: none;
		}
	}
</style>
