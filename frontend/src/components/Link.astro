---
interface Props {
    href: string;
    target?: string;
}

const { href, target }: Props = Astro.props;
---

<a
    href={href}
    target={target}
>
    <slot />
</a>

<style>
    a {
        cursor: pointer;
        width: fit-content;
        height: fit-content;
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 4px;
        position: relative;

        color: rgb(76, 76, 76);
    }
</style>
