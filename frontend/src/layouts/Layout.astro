---
import Footer from '../components/app/Footer.astro';
import Header from '../components/app/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="ATRA arquitectura - Estudi de arquitectura de Jaume Perez Llopis"
		/>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	@font-face {
		font-family: 'Inter';
		src: url('/fonts/Inter.ttf') format('truetype');
		font-display: swap;
	}

	:root {
		--background-color: #f8fafc;
		--contrast-color: #222222;
		--max-width: 1100px;

		--toast-bg: #ffffff;

		--font-small: 1rem;
		--font-medium: 1.8rem;
		--font-big: 3rem;
		--font-extra-big: 4rem;
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: var(--background-color);
		font-weight: 200;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	body {
		margin: 0 auto;
	}

	main {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	ol,
	ul {
		list-style: none;
	}

	img {
		object-fit: cover;
		width: 100%;
		height: 100%;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	p {
		font-weight: 300;
	}

	.show {
		view-timeline-name: --show;
		view-timeline-axis: block;

		animation-timeline: --show;
		animation-name: show;
		animation-range: entry 18% cover 50%;
		animation-fill-mode: both;
	}

	.spinner {
		display: inline-block !important;
		animation: rotation 1s linear infinite;
	}

	@keyframes slide-right {
		from {
			left: -100%;
		}
		to {
			left: 0;
		}
	}

	@keyframes show {
		from {
			opacity: 0;
			transform: translateY(55%);
		}

		to {
			opacity: 1;
			transform: translateY(0%);
		}
	}

	@keyframes rotation {
		to {
			transform: rotate(360deg);
		}
	}
</style>
