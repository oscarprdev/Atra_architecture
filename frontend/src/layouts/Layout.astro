---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <ViewTransitions fallback="none" />
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Astro description"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon.svg"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
        <style is:global>
            main {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            @font-face {
                font-family: 'AnonymousPro';
                src: url('/fonts/AnonymousPro.ttf') format('ttf');
                font-display: swap;
            }

            @font-face {
                font-family: 'Arimo';
                src: url('/fonts/Arimo.ttf') format('ttf');
                font-display: swap;
            }

            :root {
                --background-color: white;
                --max-width: 1100px;
            }

            html {
                font-family: 'Arimo', 'AnonymousPro', system-ui, sans-serif;
                background: var(--background-color);
                font-weight: 200;
            }

            *,
            *::before,
            *::after {
                box-sizing: border-box;
            }

            body {
                margin: 0 auto;
            }

            ol,
            ul,
            menu {
                list-style: none;
            }

            img {
                object-fit: cover;
                width: 100%;
                height: 100%;
            }

            a {
                text-decoration: none;
            }

            .show {
                view-timeline-name: --show;
                view-timeline-axis: block;

                animation-timeline: --show;
                animation-name: show;
                animation-range: entry 18% cover 50%;
                animation-fill-mode: both;
            }

            @keyframes slide-right {
                from {
                    left: -100%;
                }
                to {
                    left: 0;
                }
            }

            @keyframes show {
                from {
                    opacity: 0;
                    transform: translateY(55%);
                }

                to {
                    opacity: 1;
                    transform: translateY(0%);
                }
            }
        </style>
    </body>
</html>
